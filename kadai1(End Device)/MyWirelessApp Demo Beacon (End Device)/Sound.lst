   25:  *
   26:  * Handle buzzer timer. Turn off when done.
   27:  *****************************************************************************/
   28:  void BuzzerTimerCallBack
   29:    (
   30:    tmrTimerID_t timerID
   31:    )
   32:  {
   33:    (void)timerID;
